---
import ArchivePanel from "@components/ArchivePanel.svelte";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts } from "@features/content";
import { DEFAULT_LANGUAGE } from "../constants/constants";

const lang = DEFAULT_LANGUAGE;
const sortedPosts = await getSortedPosts(lang);
---

<MainGridLayout title={i18n(I18nKey.archive, lang)} lang={lang}>
    <ArchivePanel sortedPosts={sortedPosts} client:only="svelte" />
</MainGridLayout>
