---
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import { getSeriesList } from "../../utils/content-utils";
import { SUPPORTED_LANGUAGES, DEFAULT_LANGUAGE } from "../../constants/constants";
import SeriesPanel from "../../components/SeriesPanel.astro";

export async function getStaticPaths() {
    return SUPPORTED_LANGUAGES
        .filter(lang => lang !== DEFAULT_LANGUAGE)
        .map(lang => ({
            params: { lang },
            props: { lang }
        }));
}

const { lang } = Astro.props;
const seriesList = await getSeriesList(lang);
---

<MainGridLayout title={i18n(I18nKey.series, lang)} lang={lang}>
    <SeriesPanel seriesList={seriesList} lang={lang}></SeriesPanel>
</MainGridLayout>
